<layouts>
    <!-- Simple Field Layout. -->
    <layout id="SimpleLayout">
        <drawable class="Background" />
        <label id="value_eta" x="center" y="30%" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER|Graphics.TEXT_JUSTIFY_VCENTER" font="Graphics.FONT_SYSTEM_LARGE" />
        <label id="value_pace" x="center" y="70%" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER|Graphics.TEXT_JUSTIFY_VCENTER" font="Graphics.FONT_SYSTEM_TINY" />
    </layout>

    <!-- Full screen layout. Build talbe layout: dist, alt, time; rem, sample, recent-->
    <layout id="FullScreenLayout">
        <drawable class="Background" />
        <label id="value_eta" text="----" x="50%" y="4%" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER" font="Graphics.FONT_SYSTEM_NUMBER_HOT" />
        <label text="CURRENT PACE" id="value_pace_grade" x="50%" y="35%" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER|Graphics.TEXT_JUSTIFY_VCENTER" font="Graphics.FONT_SYSTEM_SMALL" />
        <label id="value_remaining_info" text="---" x="50%" y="75%" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER|Graphics.TEXT_JUSTIFY_VCENTER" font="Graphics.FONT_SYSTEM_XTINY" />
        <label id="value_max_window_info" text="---" x="50%" y="55%" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER|Graphics.TEXT_JUSTIFY_VCENTER" font="Graphics.FONT_SYSTEM_XTINY" />
        <label id="label_remaining" text="REMAINING COURSE" x="50%" y="67%" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER|Graphics.TEXT_JUSTIFY_VCENTER" font="Graphics.FONT_SYSTEM_XTINY" />
        <label id="label_recent" text="LAST HOUR INFO" x="50%" y="47%" color="Graphics.COLOR_WHITE" justification="Graphics.TEXT_JUSTIFY_CENTER|Graphics.TEXT_JUSTIFY_VCENTER" font="Graphics.FONT_SYSTEM_XTINY" />
    </layout>

    <!-- Wide field layout. -->
    <layout id="WideLayout">
        <drawable class="Background" />
